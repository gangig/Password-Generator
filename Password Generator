import random
import string

def generate_lowercase_password(length):
    return ''.join(random.choices(string.ascii_lowercase, k=length))

def generate_uppercase_password(length):
    return ''.join(random.choices(string.ascii_uppercase, k=length))

def generate_mixed_case_password(length):
    password = random.choices(string.ascii_letters + string.digits, k=length)
    random.shuffle(password)
    return ''.join(password)

def generate_complex_password(length):
    password = random.choices(string.ascii_letters + string.digits + string.punctuation, k=length)
    random.shuffle(password)
    return ''.join(password)

print("Welcome to the Complex Password Generator!")
print("Выберите тип пароля, который вы хотите сгенерировать:")
print("1. Только строчные буквы")
print("2. Только прописные буквы")
print("3. Буквы и цифры со смешанным регистром")
print("4. Сложный пароль с буквами, цифрами и специальными символами")

choice = int(input("Введите свой выбор (1/2/3/4):"))
length = int(input("Введите длину пароля:"))

if choice == 1:
    print(f"Ваш пароль - это: {generate_lowercase_password(length)}")
elif choice == 2:
    print(f"Ваш пароль - это: {generate_uppercase_password(length)}")
elif choice == 3:
    print(f"Ваш пароль - это: {generate_mixed_case_password(length)}")
elif choice == 4:
    print(f"Ваш пароль - это: {generate_complex_password(length)}")
else:
    print("Неверный выбор. Пожалуйста, попробуйте снова.")

print(f"Для выхода нажмите любую клавишу")
input()
